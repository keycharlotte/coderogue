# Environment
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=coderogue_analytics
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_SKIP=true
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000
DB_ACQUIRE_TIMEOUT=60000
DB_CREATE_TIMEOUT=30000
DB_DESTROY_TIMEOUT=5000
DB_REAP_INTERVAL=1000
DB_CREATE_RETRY_INTERVAL=200
DB_PROPAGATE_CREATE_ERROR=false

# Retry Configuration
DB_MAX_RETRIES=3
DB_INITIAL_RETRY_DELAY=1000
DB_MAX_RETRY_DELAY=10000
DB_BACKOFF_MULTIPLIER=2

# Server Configuration
PORT=8080
NODE_ENV=development
LOG_LEVEL=debug

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# Analytics Configuration
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=5000
ANALYTICS_RETENTION_DAYS=90